\NormalTok{                fos.}\FunctionTok{write}\NormalTok{(buffer, }\DecValTok{0}\NormalTok{, byteCount);}
\NormalTok{            \}}
\NormalTok{            fos.}\FunctionTok{flush}\NormalTok{();}
